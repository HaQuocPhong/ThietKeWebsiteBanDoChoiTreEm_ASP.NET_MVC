@using DoChoiTreEmWeb.Models
@using PagedList.Mvc;
@model PagedList.PagedList<DoChoiTreEmWeb.Models.DONDATHANG>

@helper Truncate(string s, int length)
{
    if (s.Length < length)
    {
        @s
    }
    else
    {
        @s.Substring(0, length)<text>..</text>
    }
}

